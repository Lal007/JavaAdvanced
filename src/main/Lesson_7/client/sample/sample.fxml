<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>

<?scenbulder-stylsheet /css/Style.css?>

<?import java.net.URL?>
<?import javafx.scene.control.PasswordField?>
<VBox fx:controller="main.Lesson_7.client.sample.Controller" xmlns:fx="http://javafx.com/fxml" alignment="center">

    <stylesheets><URL value="@../css/Style.css"></URL> </stylesheets>

    <HBox fx:id="upperPanel">
        <TextField HBox.hgrow="ALWAYS" promptText="Логин" fx:id="loginField"></TextField>
        <PasswordField HBox.hgrow="ALWAYS" promptText="Пароль" fx:id="passwordField" onAction="#tryToAuth"/>
        <Button text="Авторизация" onAction="#tryToAuth"/>
    </HBox>
    <TextArea fx:id="textArea" editable="false" VBox.vgrow="ALWAYS"> </TextArea>

        <HBox fx:id="bottomPanel" managed="false" visible="false">
            <TextField fx:id="textField" onAction="#sendMsg" HBox.hgrow="ALWAYS" promptText="Введите сообщение"/>
            <Button fx:id="btn1" text="Send" onAction="#sendMsg"/>
        </HBox>
</VBox>